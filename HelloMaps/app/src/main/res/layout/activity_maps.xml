
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!--Text Entry above map.-->
    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/txtMarkerName"
        android:hint="Enter Marker Name Here..."
        android:padding="10dp"/>
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity" android:layout_below="@id/txtMarkerName"
        android:name="com.google.android.gms.maps.SupportMapFragment"/><!-- Adding LongClickListener for map-->


</RelativeLayout>



